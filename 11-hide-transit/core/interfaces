auto lo:0

iface lo:0 inet static
    address 10.0.0.1
    netmask 255.255.255.255

auto eth1 eth2 eth3
iface eth1 inet static
    address 10.1.0.2
    netmask 255.255.255.252

iface eth2 inet static
    address 10.1.0.6
    netmask 255.255.255.252

iface eth3 inet static
    address 10.1.0.9
    netmask 255.255.255.252